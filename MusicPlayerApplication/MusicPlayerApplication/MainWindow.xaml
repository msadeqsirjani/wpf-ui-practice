                                <GradientStop Color="#FFD6511E"
                                              Offset="0.747" />
                                <GradientStop Color="#FF9B330D"
                                              Offset="0.8007" />
                            </LinearGradientBrush>
                        </materialDesign:PackIcon.Foreground>
                    </materialDesign:PackIcon>
                </Button>
            </Grid>
            <Grid Margin="0 50"
                  VerticalAlignment="Top">
                <Ellipse Width="150"
                         Height="150"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
